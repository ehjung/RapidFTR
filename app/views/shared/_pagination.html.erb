<% child_results ||= WillPaginate::Collection.new 1,1,0 %>
<% enquiry_results ||= WillPaginate::Collection.new 1,1,0 %>
<% results ||= WillPaginate::Collection.new 1,1,0 %>

<div class="pagination-box">
  <div class="page_info">
  	<% if @record == "children" %>
  		<%= page_entries_info child_results %>
  	<% elsif @record == "enquiries" %>
  		<%= page_entries_info enquiry_results %>
    <% else %>
      <%= page_entries_info results %>
  	<% end %>
  </div>
  <% if @record == "children" %>
  	<%= will_paginate child_results %>
  <% elsif  @record == "enquiries" %>
  	<%= will_paginate enquiry_results %>
  <% else %>
    <%= will_paginate results %>
  <% end %>
  <div class="clearfix"></div>
</div>
